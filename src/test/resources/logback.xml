<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for minimal output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %logger{20} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- All loggers set to OFF (no output) -->
    <logger name="org.eclipse.jetty" level="OFF"/>
    <logger name="org.apache.maven" level="OFF"/>
    <logger name="com.microsoft.playwright" level="OFF"/>
    <logger name="org.junit" level="OFF"/>
    <logger name="com.webforj.App" level="OFF"/>
    <logger name="com.webforj" level="OFF"/>
    <logger name="PlaywrightFramework" level="OFF"/>
    <logger name="utils" level="OFF"/>
    <logger name="io.netty" level="OFF"/>

    <!-- Root logger set to OFF -->
    <root level="OFF">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>